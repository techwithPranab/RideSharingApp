  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Set timestamp for unique requests",
          "pm.globals.set(\"timestamp\", new Date().getTime());",
          "",
          "// Extract token from login/register responses",
          "if (pm.response.code === 200) {",
          "    const response = pm.response.json();",
          "    if (response.success && response.data) {",
          "        if (response.data.token) {",
          "            pm.collectionVariables.set(\"token\", response.data.token);",
          "        }",
          "        if (response.data.user && response.data.user.id) {",
          "            pm.collectionVariables.set(\"userId\", response.data.user.id);",
          "        }",
          "        if (response.data.id) {",
          "            pm.collectionVariables.set(\"subscriptionId\", response.data.id);",
          "        }",
          "        if (response.data.ride && response.data.ride.id) {",
          "            pm.collectionVariables.set(\"rideId\", response.data.ride.id);",
          "        }",
          "    }",
          "}"
        ]
      }
    }
  ]
